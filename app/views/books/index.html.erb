<h1>Books</h1>

<p><%= link_to "New Book", new_book_path%></p>

<tbody>
  <% @books.all.each do |book| %>
    <tr>
      <td>Title: <%= link_to book.title, book_path(book) %></td><br>
      <td>Genre: <%= book.genre %></td><br>
      <td>Pages: <%= book.pages %></td><br>
      <td>Author: <%= link_to book.author.name, author_path(book.author) if book.author%></td><br><br>
    </tr>
  <% end %>
</tbody>
