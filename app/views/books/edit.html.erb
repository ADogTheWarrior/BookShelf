<h1>Editing "<%= @book.title %>"</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@book.errors.count, "error") %>
      prohibited this post from being saved:
    </h3>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= render partial: "bookform", locals: {book: @book} %>
